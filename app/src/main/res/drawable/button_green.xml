<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#44b937" />
            <stroke
                android:width="1dp"
                android:color="#226922" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="1dp"
                android:right="10dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="#343434" />
            <stroke
                android:width="1dp"
                android:color="#171717" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="1dp"
                android:right="10dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#44b937"
                android:endColor="#226922"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#226922" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="1dp"
                android:right="10dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>