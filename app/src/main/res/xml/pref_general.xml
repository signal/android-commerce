<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="siteid"
        android:defaultValue="@string/pref_default_site_id"
        android:inputType="text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_site_id"/>

    <ListPreference
        android:key="environment"
        android:entries="@array/pref_environment_values"
        android:entryValues="@array/pref_environment_values"
        android:defaultValue="Production"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_environment"/>

    <ListPreference
        android:key="protocol"
        android:entries="@array/pref_protocol_values"
        android:entryValues="@array/pref_protocol_values"
        android:defaultValue="HTTPS"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_protocol"/>

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="enable_lifecycle"
        android:title="@string/pref_title_lifecycle"/>

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="enable_background"
        android:title="@string/pref_title_background"/>

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="enable_wifi"
        android:title="@string/pref_title_wifi_only"/>

</PreferenceScreen>
